{
    "name": "acf/cta",
    "title": "CTA",
    "description": "A custom block for displaying a CTA (call-to-action).",
    "category": "widgets",
    "icon": "external",
    "keywords": ["cta", "call", "action"],
    "acf": {
        "mode": "edit",
        "renderTemplate": "block.php"
    },
    "align": false,
    "supports": {
        "mode": false,
        "align": false,
        "spacing": {
            "margin": ["top", "bottom"]
        },
        "color": {
            "background": true,
            "gradients": false,
            "text": false
        }
    },
    "attributes": {
        "style": {
            "type": "object",
            "default": {
                "spacing": {
                    "margin": {
                        "top": "80px",
                        "bottom": "80px"
                    }
                }
            }
        }
    }
}